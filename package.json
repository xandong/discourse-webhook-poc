{
  "name": "discourse-webhook-integration",
  "version": "1.0.0",
  "description": "Webhook-to-Message-Bus architecture for Discourse real-time event integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev:handler": "ts-node src/handler/index.ts",
    "dev:worker": "ts-node src/worker/index.ts",
    "start:handler": "node dist/handler/index.js",
    "start:worker": "node dist/worker/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "keywords": [
    "discourse",
    "webhook",
    "message-bus",
    "event-driven"
